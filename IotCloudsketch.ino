void loop() {
  ArduinoCloud.update();
  // Your code here

  int s1 = digitalRead(ir1) ;
  int s2 = digitalRead(ir2) ;

  if (s1 == 0)
  {
    pcount++ ;
    delay(1000) ;
    Serial.println("IN") ;
  }
  if (s2 == 0)
  {
    pcount-- ;
    delay(1000) ;
    Serial.println("OUT") ;
  }

if(auto_Manual==0)   //Auto Mode
{
  if(pcount>0)
  {
    light=1 ;
    lightSwitch=1 ;
    analogWrite(ledpin,255);
  }  
  else if(pcount<0) pcount=0 ;
  else 
  {
    light=0 ;
    lightSwitch=0 ;
    analogWrite(ledpin,0);
  }
} 
  
else if(auto_Manual==1)   //Manual Mode
{
  if(lightSwitch==1)
  {
    light=1 ;
    analogWrite(ledpin,255);
  }
  if(lightSwitch==0)
  {
    light=0 ;
    analogWrite(ledpin,0);
  }
}


}

